    "micromatch": "^4.0.8",
    "word-wrap": ">=1.2.4",
    "semver": ">=7.5.2",
    "semver-regex": ">=3.1.4",
    "follow-redirects": ">=1.15.6",
    "es5-ext": ">=0.10.63"
  },
  "scripts": {
    "build": "npm ci && npm run scripts:min",
    "test": "cd tests && npx vitest",
    "eslint": "npx eslint \"src/**/*.js\"",
    "scripts": "npm run scripts:clean && npx rolldown -c rolldown.config.mjs",
    "scripts:dev": "npx rolldown -c rolldown.config.dev.mjs",
    "scripts:min": "npm run scripts:clean && npx rolldown -c rolldown.config.mjs -- --minify",
    "scripts:clean": "rm -rf dist/js && rm -rf dist/mjs && rm -rf dist/dev && rm -rf dist/cjs && rm -rf dist/esm"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100
    }
  }
}
