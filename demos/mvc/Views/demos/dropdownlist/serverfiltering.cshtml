                            transport: {
                                read: {
                                    url: "http://demos.telerik.com/kendo-ui/service/Northwind.svc/Products",
                                }
                            }
                        }
                    });
                });
            </script>
            
            <style scoped>
                .demo-section {
                    width: 400px;
                }
                .demo-section h2 {
                    text-transform: uppercase;
                    font-size: 1.2em;
