
        <div id="example">

            <div class="demo-section k-header">
                <h4>Products</h4>
                <input id="products" style="width: 400px" />
            </div>

            <script>
                $(document).ready(function() {
                    $("#products").kendoDropDownList({
                        filter: "startswith",
                        dataTextField: "ProductName",
