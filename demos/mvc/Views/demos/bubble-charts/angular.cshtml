<div id="example" ng-app="KendoDemos">
    <div class="demo-section k-content" ng-controller="MyCtrl">
        <div class="box-col" style="width: 500px;">
            <h4>Hover some series</h4>
            <div kendo-chart
                 k-title="{ text: 'Crime stats', position: 'bottom' }"
                 k-legend="{ position: 'top' }"
                 k-series="[ {
                                 type: 'bubble',
                                 xField: 'murder',
                                 yField: 'burglary',
                                 sizeField: 'population',
                                 categoryField: 'state'
                             }]"
                 k-series-hover="onSeriesHover"
                 k-data-source="crimeDataSource"></div>
        </div>
        <div class="box-col">
            <h4>Console</h4>
            <div class="console"></div>
        </div>
    </div>
<script>
    angular.module("KendoDemos", ["kendo.directives"]);
    function MyCtrl($scope) {
        $scope.onSeriesHover = function(e) {
             kendoConsole.log(kendo.format("event :: seriesHover ({0} : {1})", e.category, e.value.size));
        },
        $scope.crimeDataSource = new kendo.data.DataSource({
            transport: {
                read: {
                    url: "../content/dataviz/js/crime-stats.json",
                    dataType: "json"
                }
            }
        })
    }

</script>
</div>
