                }

                .k-header {
                    border-radius: 3px 3px 0 0;
                }

                #calendar .k-content {
                    height: 168px;
                }

                .exhibition {
                    background: transparent url(../../content/web/calendar/exhibition.png) no-repeat 0 50%;
                    display: inline-block;
